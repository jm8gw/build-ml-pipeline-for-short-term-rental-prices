name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Fully qualified name for the artifact to be cleaned
        type: str

      output_artifact:
        description: Name for the W&B artifact that will be created and store the cleaned data
        type: str

      output_type:
        description: Type for the W&B artifact that will be created
        type: str

      output_description:
        description: Description for the W&B artifact that will be created
        type: str

      min_price:
        description: Minimum price for a rental to be included in the cleaned dataset
        type: float

      max_price:
        description: Maximum price for a rental to be included in the cleaned dataset
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact}  --output_artifact {output_artifact}  --output_type {output_type}  --output_description {output_description}  --min_price {min_price}  --max_price {max_price} 
